        <Label Content="Verify Account:" HorizontalAlignment="Left" Height="37" Margin="10,329,0,0" VerticalAlignment="Top" Width="131" FontSize="18"/>
        <Label Content="Upload Licence" HorizontalAlignment="Left" Height="37" Margin="60,371,0,0" VerticalAlignment="Top" Width="144" FontSize="18"/>
