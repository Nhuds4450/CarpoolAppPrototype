        <Button Content="ADD" HorizontalAlignment="Left" Height="25" Margin="279,414,0,0" VerticalAlignment="Top" Width="61" FontSize="16" Foreground="White" Background="#FFB20E0E" BorderBrush="{x:Null}"/>
        <CheckBox Content="Read and Accept terms and conditions" HorizontalAlignment="Left" Margin="10,514,0,0" VerticalAlignment="Top" Height="27" Width="355" FontSize="16"/>
        <Label Content="You can verify later as well" HorizontalAlignment="Left" Margin="14,445,0,0" VerticalAlignment="Top" Width="200" FontSize="16"/>
        <Label Content="You can add your schedule later as well" HorizontalAlignment="Left" Margin="42,221,0,0" VerticalAlignment="Top" Width="286" FontSize="16"/>
        <Button Content="DONE" HorizontalAlignment="Left" Height="51" Margin="123,558,0,0" VerticalAlignment="Top" Width="123" FontSize="16" Click="Button_Click_1" BorderBrush="#FF938E8E"/>
        <Button Content="NEXT" HorizontalAlignment="Left" Height="41" Margin="264,616,0,0" VerticalAlignment="Top" Width="101" Background="#FFE6E172" FontSize="16" Click="Button_Click"/>

    </Grid>
</Page>
